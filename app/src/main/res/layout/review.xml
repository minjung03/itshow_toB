<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_writeBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/arrow_blue"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B5000000"
                android:layout_gravity="center"
                android:fontFamily="@font/suncheonb"
                android:textSize="18sp"
                android:text="리뷰"
                />
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="[급구] 크리넥스 휴지 120롤 나눠사실 분!!"
        android:fontFamily="@font/suncheonb"
        android:textSize="14sp"
        android:padding="15dp"
        android:background="@drawable/button_round1_white"
        />
        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="140dp"
            android:background="@drawable/button_round1_white_gray"
            android:fontFamily="@font/suncheonb"
            android:gravity="top"
            android:hint="거래는 만족스러우셨나요?\n후기를 작성해주세요 :)"
            android:padding="20dp"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="@drawable/search_above_round"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/suncheonb"
            android:letterSpacing="0.05"
            android:lineSpacingExtra="10sp"
            android:shadowColor="#4D000000"
            android:shadowDx="-7.0"
            android:shadowDy="7.0"
            android:shadowRadius="20.0"
            android:text="Tip. 각 사용자마다 별점을 남길 수 있어요"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:textStyle="bold" />

        <!--리뷰-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_profile1"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_round1_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/text_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suncheonb"
                android:textSize="12sp"
                android:text="김민"
                android:textColor="#FFFFFF"
                />
                <RatingBar
                    android:id="@+id/ratingbar_stars1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="#FFEB3B"
                    android:progressBackgroundTint="#FFFFFF"
                    android:numStars="5"
                    android:rating="0.5"
                    android:stepSize="0.5"
                    android:isIndicator="false"
                    />
            </LinearLayout>

        </LinearLayout>
        <!--리뷰 END-->
        <!--리뷰-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_profile2"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_round1_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/suncheonb"
                    android:textSize="12sp"
                    android:text="엉뚜더지흰"
                    android:textColor="#FFFFFF"
                    />
                <RatingBar
                    android:id="@+id/ratingbar_stars2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="#FFEB3B"
                    android:progressBackgroundTint="#FFFFFF"
                    android:numStars="5"
                    android:rating="3.5"
                    android:stepSize="0.5"
                    android:isIndicator="false"
                    />
            </LinearLayout>

        </LinearLayout>
        <!--리뷰 END-->
        <!--리뷰-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_profile3"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/button_round1_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/suncheonb"
                    android:textSize="12sp"
                    android:text="바찬희보"
                    android:textColor="#FFFFFF"
                    />
                <RatingBar
                    android:id="@+id/ratingbar_stars3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="#FFEB3B"
                    android:progressBackgroundTint="#FFFFFF"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="0.5"
                    android:isIndicator="false"
                    />
            </LinearLayout>

        </LinearLayout>
        <!--리뷰 END-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:background="@drawable/button_round1_white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:fontFamily="@font/suncheonb"
            android:text="작성 완료 →"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>