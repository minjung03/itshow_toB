<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:padding="30dp"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_reviewBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/arrow_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/suncheonb"
            android:text="리뷰"
            android:textColor="#B5000000"
            android:textSize="18sp" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:gravity="top"
                android:orientation="vertical"
                android:paddingRight="30dp"
                android:paddingLeft="30dp">

                <TextView
                    android:id="@+id/text_review_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/button_round1_white"
                    android:fontFamily="@font/suncheonb"
                    android:padding="15dp"
                    android:text="[급구] 크리넥스 휴지 120롤 나눠사실 분!!"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edit_content"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_round1_white_gray"
                    android:fontFamily="@font/suncheonb"
                    android:gravity="top"
                    android:hint="거래는 만족스러우셨나요?\n후기를 작성해주세요 :)"
                    android:padding="20dp"
                    android:textSize="12sp" />
            </LinearLayout>

        <SlidingDrawer
            android:layout_marginTop="75dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:content="@+id/content"
            android:handle="@+id/handle"
            android:orientation="vertical">
            <TextView
                android:id="@+id/handle"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_above_round"
                android:fontFamily="@font/suncheonb"
                android:gravity="center"
                android:text="리뷰 등록"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#315ff5"
                android:gravity="top"
                android:orientation="vertical"
                android:padding="30dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/suncheonb"
                    android:letterSpacing="0.05"
                    android:lineSpacingExtra="10sp"
                    android:shadowColor="#4D000000"
                    android:shadowDx="-7.0"
                    android:shadowDy="7.0"
                    android:shadowRadius="20.0"
                    android:text="Tip. 각 사용자마다 별점을 남길 수 있어요"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <!--리뷰-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_profile1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/button_round1_white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/suncheonb"
                            android:text="김민"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <RatingBar
                            android:id="@+id/ratingbar_stars1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="false"
                            android:numStars="5"
                            android:progressBackgroundTint="#FFFFFF"
                            android:progressTint="#FFEB3B"
                            android:rating="0.5"
                            android:stepSize="0.5" />
                    </LinearLayout>

                </LinearLayout>
                <!--리뷰 END-->
                <!--리뷰-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_profile2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/button_round1_white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/suncheonb"
                            android:text="엉뚜더지흰"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <RatingBar
                            android:id="@+id/ratingbar_stars2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="false"
                            android:numStars="5"
                            android:progressBackgroundTint="#FFFFFF"
                            android:progressTint="#FFEB3B"
                            android:rating="3.5"
                            android:stepSize="0.5" />
                    </LinearLayout>

                </LinearLayout>
                <!--리뷰 END-->
                <!--리뷰-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_profile3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/button_round1_white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/suncheonb"
                            android:text="바찬희보"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <RatingBar
                            android:id="@+id/ratingbar_stars3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="false"
                            android:numStars="5"
                            android:progressBackgroundTint="#FFFFFF"
                            android:progressTint="#FFEB3B"
                            android:rating="5"
                            android:stepSize="0.5" />
                    </LinearLayout>

                </LinearLayout>
                <!--리뷰 END-->
                    <!--리뷰-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_profile4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/button_round1_white" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_name4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/suncheonb"
                                android:text="리뷰리뷰"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp" />

                            <RatingBar
                                android:id="@+id/ratingbar_stars4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:isIndicator="false"
                                android:numStars="5"
                                android:progressBackgroundTint="#FFFFFF"
                                android:progressTint="#FFEB3B"
                                android:rating="5"
                                android:stepSize="0.5" />
                        </LinearLayout>

                    </LinearLayout>
                    <!--리뷰 END-->
                <Button
                    android:id="@+id/btn_completed_write"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="right|bottom"
                    android:background="@drawable/button_round1_white"
                    android:fontFamily="@font/suncheonb"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="작성 완료 →"
                    android:textSize="12sp" />
                </LinearLayout>
            </ScrollView>
            </LinearLayout>
        </SlidingDrawer>
    </FrameLayout>
</LinearLayout>