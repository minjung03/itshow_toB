<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="30dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="#000000"
            android:layout_gravity="center"
            android:background="@drawable/arrow_black"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#B5000000"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="글 작성"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context=".WriteRecruitment">
        <!-- 모집글 작성 -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:elevation="5dp"
            android:layout_margin="5dp"
            android:layout_gravity="left"
            android:padding="30dp"
            android:background="@drawable/button_round1_white"
            android:orientation="vertical">

            <!-- 제목 -->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:backgroundTint="#2457BD"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_checkbox"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:hint="제목"
                    android:layout_gravity="center"
                    android:textColorHint="#86000000"
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    />
                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#90000000"
                    android:background="@drawable/ic_add_file"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000"
                android:elevation="3dp"
                android:layout_marginBottom="10dp"
                />

            <!-- 제목 END -->

            <!--최소 모집 가격-->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:backgroundTint="#2457BD"
                    android:background="@drawable/ic_krw"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:hint="최소 모집 가격"
                    android:layout_gravity="center"
                    android:textColorHint="#86000000"
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000"
                android:elevation="3dp"
                android:layout_marginBottom="10dp"
                />
            <!--최소 모집 가격 END-->

            <!--카테고리-->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:backgroundTint="#2457BD"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_label"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="카테고리"
                    android:textColor="#86000000"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="선택"
                    android:background="@drawable/button_round1_gray"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000"
                android:elevation="3dp"
                android:layout_marginBottom="10dp"
                />
            <!--카테고리 END-->

            <!-- 모집기간 -->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:backgroundTint="#2457BD"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_calendar"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="모집기간"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textColor="#86000000"
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000"
                android:elevation="3dp"
                android:layout_marginBottom="10dp"
                />

            <!-- 모집기간 END -->

            <!--주문처-->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:backgroundTint="#2457BD"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_share"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:hint="주문처(이름 or 사이트 주소)"
                    android:layout_gravity="center"
                    android:textColorHint="#86000000"
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000"
                android:elevation="3dp"
                android:layout_marginBottom="10dp"
                />
            <!--주문처 END-->
            <!-- 위치 -->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:backgroundTint="#2457BD"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_marker"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="위치"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:textColor="#86000000"
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#000000"
                android:elevation="3dp"
                android:layout_marginBottom="10dp"
                />

            <!-- 위치 END -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="상세내용"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:textColor="#86000000"
                android:padding="10dp"
                android:background="#FFFFFF"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:hint="거래 시 필요한 상세 정보를 적어주세요 :)"
                android:textSize="14sp"
                android:gravity="top"
                android:padding="20dp"
                android:background="@drawable/button_round1_white"
                />
        </LinearLayout>
        <!-- 모집글 작성 END -->

    </ScrollView>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/suncheonb"
        android:textSize="20sp"
        android:text="등록 ✔"
        android:background="@drawable/button_round1_blue"
        />
    </LinearLayout>
</LinearLayout>
