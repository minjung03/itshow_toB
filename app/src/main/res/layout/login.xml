<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp">

        <RelativeLayout
            android:layout_marginTop="90dp"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <TextView
                android:padding="45dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:textColor="#2163E8"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/Login_Title"
                android:text="Login"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:padding="13dp"
                android:hint="아이디"
                android:textColorHint="#A3A3A3"
                android:textSize="13sp"
                android:id="@+id/Id_Login_Edit"
                android:layout_below="@+id/Login_Title"
                android:background="@drawable/login_edit_style"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Pass_Login_Edit"
                android:padding="13dp"
                android:hint="비밀번호"
                android:textColorHint="#A3A3A3"
                android:textSize="13sp"
                android:layout_below="@+id/Id_Login_Edit"
                android:background="@drawable/login_edit_style"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_autoLogin"
                android:layout_below="@+id/Pass_Login_Edit"
                android:layout_marginBottom="45dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp">

                <CheckBox
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:button="@android:color/transparent"
                    android:background="@drawable/autologin_checkbox"
                    android:id="@+id/AutoLogin_Check"/>

                <TextView
                    android:id="@+id/test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/AutoLogin_Check"
                    android:layout_centerVertical="true"
                    android:textColor="#5A5A5A"
                    android:textSize="12sp"
                    android:text="자동 로그인"/>
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/btn_Login"
                android:layout_below="@+id/layout_autoLogin"
                android:background="@drawable/login_button_style"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Text_Move_Join"
                android:layout_below="@id/btn_Login"
                android:layout_alignRight="@+id/btn_Login"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="회원가입  >"
                android:textColor="#5A5A5A"
                android:textSize="11sp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>