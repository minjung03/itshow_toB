<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_blue"
            android:id="@+id/img_JoinBack"/>

        <RelativeLayout
            android:layout_marginTop="70dp"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <TextView
                android:padding="45dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:textColor="#2163E8"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/Join_Title"
                android:text="Join"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:padding="13dp"
                android:hint="이름"
                android:textColorHint="#A3A3A3"
                android:textSize="13sp"
                android:id="@+id/Name_Join_Edit"
                android:layout_below="@+id/Join_Title"
                android:background="@drawable/login_edit_style"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:id="@+id/Id_Join_Edit"
                android:padding="13dp"
                android:hint="아이디"
                android:textColorHint="#A3A3A3"
                android:textSize="13sp"
                android:layout_below="@+id/Name_Join_Edit"
                android:background="@drawable/login_edit_style"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="45dp"
                android:id="@+id/Pass_Join_Edit"
                android:padding="13dp"
                android:hint="비밀번호"
                android:textColorHint="#A3A3A3"
                android:textSize="13sp"
                android:layout_below="@+id/Id_Join_Edit"
                android:background="@drawable/login_edit_style"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회원 가입"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/btn_Join"
                android:layout_below="@+id/Pass_Join_Edit"
                android:background="@drawable/login_button_style"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>