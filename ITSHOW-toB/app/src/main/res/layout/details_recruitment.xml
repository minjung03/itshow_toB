<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="30dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        tools:context=".WriteRecruitment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_DetailsBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/arrow_blue"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B5000000"
                android:layout_gravity="center"
                android:fontFamily="@font/suncheonb"
                android:textSize="18sp"
                android:text="상세 보기"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:elevation="5dp"
            android:layout_margin="5dp"
            android:padding="30dp"
            android:background="@drawable/button_round1_white"
            android:orientation="vertical">
            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="20dip"
                android:id="@+id/img_recruitment"
                android:layout_gravity="center"
                android:elevation="1dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:adjustViewBounds="false"
                android:background="@drawable/main_item_style"
                android:src="@drawable/arrow_blue"
                />
            <!-- 제목 -->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:backgroundTint="#2457BD"
                    android:layout_gravity="center"
                    android:text="쿠팡 생필품 공구 모집"
                    android:id="@+id/text_Title_details"
                    />


            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:padding="7dp"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_round1_blue"
                    android:backgroundTint="#2457BD"
                    android:layout_gravity="center"
                    android:text="최소 모집 가격"
                    />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/text_minAmount_details"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:backgroundTint="#2457BD"
                    android:layout_gravity="center"
                    android:text="50,000 원"
                    />
                />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:backgroundTint="#2457BD"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_calendar"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/text_date_details"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="12sp"
                    android:fontFamily="@font/suncheonb"
                    android:text="~23일까지"
                    android:layout_gravity="center"
                    android:textColorHint="#86000000"
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    />
            </LinearLayout>


            <!--카테고리 END-->

            <!-- 모집기간 -->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:backgroundTint="#2457BD"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_share"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_order_details"
                    android:textSize="12sp"
                    android:fontFamily="@font/suncheonb"
                    android:text="쿠팡(https://www.coupang.com/)"
                    android:textColor="#86000000"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:backgroundTint="#2457BD"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_marker"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_loc_details"
                    android:textSize="12sp"
                    android:text="신림동 미림아파트"
                    android:fontFamily="@font/suncheonb"
                    android:layout_gravity="center"
                    android:textColorHint="#86000000"
                    android:padding="10dp"
                    android:background="#FFFFFF"
                    />
            </LinearLayout>
            <!--주문처 END-->
            <!-- 위치 -->
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:backgroundTint="#2457BD"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_label"
                    />
                <TextView
                    android:id="@+id/text_category_details"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/suncheonb"
                    android:textColor="#86000000"
                    android:textSize="10sp"
                    android:background="@drawable/button_round1_white_gray"
                    android:text="쇼핑물  >  생활용품"
                    />

            </LinearLayout>


            <View

                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D5D5D5"
                android:elevation="2dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/text_value_details"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="top"
                android:padding="20dp"
                android:text="쿠팡 마켓에서 생필품 같이 사실 분 구해요!"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/blue_person"
                    />

                <TextView
                    android:id="@+id/text_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신림 사는 미림이"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
        <!-- 모집글 작성 END -->
        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:background="@drawable/recruitment_chat"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="43dp"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/bin_heart"/>
            <TextView
                android:layout_marginTop="28dp"
                android:layout_marginLeft="48dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="#FFFFFF"
                android:fontFamily="@font/suncheonb"
                android:textSize="10sp"

                android:text="12"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:id="@+id/btn_sumit_details"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/suncheonb"
                android:textSize="20sp"
                android:text="채팅 하기 "
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="85dp"
                android:layout_gravity="center"
                android:background="@drawable/chatting_img"/>
        </FrameLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>
